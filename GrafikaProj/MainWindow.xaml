<Window x:Class="GrafikaProj.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GrafikaProj"
        xmlns:sharpGL="clr-namespace:SharpGL.WPF;assembly=SharpGL.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" KeyDown="Window_KeyDown">
        
    <Grid>
        <DockPanel>
            <ToolBarTray DockPanel.Dock="Top">
                <ToolBar HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Label x:Name="targetHeight" Content="Visina meta" Height="26" VerticalAlignment="Top"/>
                    <TextBox Name="targetHeightVal" Width="120" Margin="0" Text="" VerticalAlignment="Center" HorizontalAlignment="Center" TextChanged="tagetValueChanged"/>
                    <Label x:Name="caliber" Content="Kalibar metka" Height="26" VerticalAlignment="Top"/>
                    <TextBox Name="bulletCaliberVal" Width="120" Margin="0" Text="" VerticalAlignment="Center" HorizontalAlignment="Center" TextChanged="bulletCaliberVal_TextChanged"/>
                    <Label x:Name="ambientR" Content="ambientR" Height="26" VerticalAlignment="Top"/>
                    <TextBox Name="ambientRVal" Width="120" Margin="0" Text="" VerticalAlignment="Center" HorizontalAlignment="Center" TextChanged="ambientRVal_TextChanged"/>
                    <Label x:Name="ambientG" Content="ambientG" Height="26" VerticalAlignment="Top"/>
                    <TextBox Name="ambientGVal" Width="120" Margin="0" Text="" VerticalAlignment="Center" HorizontalAlignment="Center" TextChanged="ambientGVal_TextChanged"/>
                    <Label x:Name="ambientB" Content="ambientB" Height="26" VerticalAlignment="Top"/>
                    <TextBox Name="ambientBVal" Width="120" Margin="0" Text="" VerticalAlignment="Center" HorizontalAlignment="Center" TextChanged="ambientBVal_TextChanged"/>
                    <Label x:Name="ambientU" Content="ambientU" Height="26" VerticalAlignment="Top"/>
                    <TextBox Name="ambientUVal" Width="120" Margin="0" Text="" VerticalAlignment="Center" HorizontalAlignment="Center" TextChanged="ambientUVal_TextChanged"/>
                </ToolBar>
            </ToolBarTray>
            <sharpGL:OpenGLControl 
                Name="openGLControl" OpenGLDraw="openGLControl_OpenGLDraw" 
                OpenGLInitialized="openGLControl_OpenGLInitialized" Resized="openGLControl_Resized"
                DrawFPS="True" RenderContextType="FBO" FrameRate="10"/>

        </DockPanel>
    </Grid>
</Window>
